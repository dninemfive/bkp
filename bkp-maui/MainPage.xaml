<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="d9.bkp.maui.MainPage">
    <VerticalStackLayout>
        <ProgressBar x:Name="BackupProgressBar" Progress="0.5"/>
        <Grid x:Name="ProgressInfo">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="ProgressLabel" Text="progress" Grid.Column="0" HorizontalTextAlignment="Start"/>
            <Label x:Name="TimeElapsedLabel" Text="time elapsed" Grid.Column="1" HorizontalTextAlignment="End"/>
        </Grid>
        <Button x:Name="StartButton" Text="Start" Clicked="StartButton_Clicked"/>
        
        <ScrollView>
            <VerticalStackLayout>
                
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
