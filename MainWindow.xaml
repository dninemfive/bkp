<Window x:Class="bkp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bkp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ProgressBar Name ="Progress" DockPanel.Dock="Top" Height="10"/>
        <TextBlock Name="ProgressText" DockPanel.Dock="Top" Background="#444444" Foreground="LightGray" HorizontalAlignment="Stretch" Padding="6 0">0/10 (0%)</TextBlock>
        <ScrollViewer Name="Scroll">
            <TextBlock Name="Output" Background="Black" Foreground="White"></TextBlock>
        </ScrollViewer>
    </DockPanel>
</Window>
